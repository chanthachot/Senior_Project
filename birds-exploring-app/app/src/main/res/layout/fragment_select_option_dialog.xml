<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="20dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เลือกการบันทึก"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/SelectSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="vertical">

            <RadioButton
                android:id="@+id/SaveToPublic"
                android:layout_width="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:layout_height="wrap_content"
                android:buttonTint="#2E2E2E"
                android:text="สาธารณะ" />


            <RadioButton
                android:id="@+id/SaveToPrivate"
                android:layout_width="wrap_content"
                android:buttonTint="#2E2E2E"
                android:fontFamily="@font/kanit_regular"
                android:layout_height="wrap_content"
                android:text="ส่วนตัว" />


            <RadioButton
                android:id="@+id/SaveToBoth"
                android:layout_width="wrap_content"
                android:buttonTint="#2E2E2E"
                android:fontFamily="@font/kanit_regular"
                android:layout_height="wrap_content"
                android:text="ทั้งสอง" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="ยกเลิก"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บันทึก"
            android:textColor="#43A047"
            android:textSize="16sp"></TextView>

    </LinearLayout>

</RelativeLayout>