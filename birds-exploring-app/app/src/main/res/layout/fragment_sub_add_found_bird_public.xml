            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />

            <include layout="@layout/addbird_public_birds_item_place_holder" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>