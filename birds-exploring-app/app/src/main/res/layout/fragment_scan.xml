<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".Fragment.ScanFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:scrollbars="vertical" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayoutScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

            <include layout="@layout/foundbirdpublic_place_layout" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <Button
        android:id="@+id/ShowScanMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_bg3"
        android:fontFamily="@font/kanit_regular"
        android:text="ดูแผนที่"
        android:textColor="#FFFFFF"
        android:textSize="16sp"></Button>

</RelativeLayout>