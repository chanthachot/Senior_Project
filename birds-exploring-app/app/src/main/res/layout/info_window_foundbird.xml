<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_bird_info_window"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_bird_info_window"
            android:gravity="center">

            <TextView
                android:id="@+id/text_bird_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="ชื่อนก : "
                android:textColor="#1C1C1C" />

            <TextView
                android:id="@+id/bird_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_bird_name"
                android:fontFamily="@font/kanit_regular"
                android:text="bird_name"
                android:textColor="#1C1C1C" />

            <TextView
                android:id="@+id/text_bird_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_name"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="ชื่อวงศ์นก : "
                android:textColor="#1C1C1C" />

            <TextView
                android:id="@+id/bird_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_name"
                android:layout_toRightOf="@id/text_bird_family_name"
                android:fontFamily="@font/kanit_regular"
                android:text="bird_family_name"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_bird_sciname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_family_name"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="ชื่อวิทยาศาสตร์ : "
                android:textColor="#1C1C1C" />

            <TextView
                android:id="@+id/bird_sciname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_family_name"
                android:layout_toRightOf="@id/text_bird_sciname"
                android:fontFamily="@font/kanit_regular"
                android:text="bird_sciname"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_sciname"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="จำนวน : "
                android:textColor="#1C1C1C" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_sciname"
                android:layout_toRightOf="@id/text_amount"
                android:fontFamily="@font/kanit_regular"
                android:text="amount"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bird_sciname"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/amount"
                android:fontFamily="@font/kanit_regular"
                android:text="ตัว"
                android:textColor="#1C1C1C" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>